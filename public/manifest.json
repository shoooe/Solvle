{
  "name": "Solvle",
  "description": "Solver for Wordle",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "180": "icon180.png",
    "192": "icon192.png",
    "512": "icon512.png"
  },
  "browser_action": {
    "default_title": "Inject!",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://powerlanguage.co.uk/wordle/",
    "https://www.powerlanguage.co.uk/wordle/",
    "tabs"
  ]
}